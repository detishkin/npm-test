{
  "name": "npm-test",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {    
    "precompile-sass": "mkdirp dist/assets",
    "compile-sass": "node-sass src/styles/index.sass > dist/assets/bundle.css",
    "postcompile-sass": "postcss --use autoprefixer dist/assets/bundle.css -d dist/assets",
    "precopy-html": "mkdirp dist",
    "copy-html": "cp src/index.html dist/index.html",

    "preconcat-js": "mkdirp dist/assets",
    "concat-js": "cat node_modules/jquery/dist/jquery.min.js src/scripts/index.js > dist/assets/bundle.js",

    "build": "npm run copy-html && npm run compile-sass && npm run concat-js",
    "view": "http-server dist"
  },
  "keywords": [
    "npm"
  ],
  "author": "tk",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.5.0",
    "http-server": "^0.9.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.10.1",
    "postcss-cli": "^2.6.0"
  },
  "dependencies": {
    "jquery": "^3.1.1"
  }
}
